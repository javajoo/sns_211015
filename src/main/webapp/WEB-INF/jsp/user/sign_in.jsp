<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<section class="d-flex">

	<section class="log-in-image col-6 d-flex justify-content-center align-items-center">
		<div><img src="/images/instagram.png" width=400 height=400 alt="image"></div>
	</section>
	
	<section class="col-6 d-flex justify-content-center align-items-center">
		<div>
			<div class="d-flex justify-content-center mb-5">
				<div class="display-4 font-weight-bold"><div>In★gram</div></div>
			</div>
				
			<div class="d-flex justify-content-center mb-3">
				<div><input type="text" id="loginId" name="loginId" class="form-control" placeholder="아이디"></div>
			</div>
	
			<div class="d-flex justify-content-center mb-3">
				<div><input type="password" id="password" name="password" class="form-control" placeholder="비밀번호"></div>
			</div>
		
			<div class="d-flex justify-content-center mb-3">
				<div><button type="button" id="signInBtn" class="btn-info form-control">로그인</button></div>
			</div>
	
			<div class="d-flex justify-content-center mb-3">
				<div><button type="button" id="signUpBtn" class="btn-secondary form-control">회원가입</button></div>
			</div>
		</div>
	</section>
	
</section>

